<h1>Creating a new book item </h1>
<h2>The following errors prevented the book info to be saved. </h2>
<ul>
<%  if @book.errors.any?  %>
  <% @book.errors.full_messages.each do |msg|  %>
  <li> <%= msg %>   </li>

  
<% end %>
</ul>
<% end %>

<%= form_with scope: :book, url: books_path, local: true do |f| %>
    <p> 
      <%= f.label :title %><br/> 
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br/> 
      <%= f.text_area :description %> 
    </p>
    <p>
      <%= f.submit %> 
    </p>
  <% end %>

<%= link_to 'Back', books_path %>

